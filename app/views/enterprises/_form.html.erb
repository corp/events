<%= form_for @enterprise, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :vission, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :vission, :class => 'text_area' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mision, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :mision, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                enterprises_path, :class => 'btn' %>
  </div>
<% end %>
